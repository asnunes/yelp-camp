<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">

            <div class="img-thumbnail">
                <img class="img-fluid rounded" src="<%= campground.image %>" alt="a campground">
                <div class="caption">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a href="#"><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                        <form id='delete-form' class="float-right" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                        <a id="edit-button" class='btn btn-sm btn-outline-warning float-right' href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <% } %>
                        <p ><small class="font-weight-light1">submitted by <%= campground.author.username %></small></p>
                </div>
            </div>
            <hr>
            <div class="card">
                <div class="card-header">
                    <div class="float-right">
                        <a class="btn btn-primary btn-sm" href="/campgrounds/<%= campground._id %>/comments/new">Comment it too</a>
                    </div>
                </div>
                <div class="card-body">
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username.toLowerCase() %></strong>
                                <span class="float-right">10 days ago</span>
                                <p>
                                <%= comment.text %>
                                </p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>