<% include ../partials/header %>


<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>A nice campgrounds repository</p><br>
            <a class="btn btn-primary" href="/campgrounds/new">Add new campground</a>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <h3 class="col-lg-12">Popular campgrounds!</h3>
        
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-6"> 
                <div class="img-thumbnail">
                    <img class="img-fluid rounded" src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-secondary btn-sm">More info</a>
                    </div>
                </div>    
            </div>
        <%});%>
    </div>
</div>
    
<% include ../partials/footer %>