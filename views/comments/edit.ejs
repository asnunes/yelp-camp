<% include ../partials/header %>

<div class="container">

    <h1 style="text-align: center">Edit Comment</h1>

    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div style="width:30%; margin: 50px auto;">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!!</button>
            </div>
            <a href="/campgrounds/<%= campground_id %>">Go back</a>
        </div>
    </form>

</div>

<% include ../partials/footer %>